// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Dubug Unit Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--timeout",
				"999999",
				"--colors",
				"--inspect-brk",
				"--debug-brk",
				"'${workspaceFolder}/out/test/unit/*.test.js'"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Current Unit Test File",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--timeout",
				"999999",
				"--colors",
				"--inspect-brk",
				"--debug-brk",
				"${file}"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
            "type": "node",
            "request": "launch",
            "name": "Mocha Test File",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha.cmd"
            },
            "runtimeArgs": [
                "--colors",
                "--recursive",
                "${file}"
            ],
			"internalConsoleOptions": "openOnSessionStart",
			"trace": "verbose"
        },{
			"type": "node",
			"request": "launch",
			"name": "Mocha All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/src/test/unit/**/*.test.ts",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"protocol": "inspector"
		}
	]
}
