{
  "name": "auto-barrel",
  "displayName": "Auto Barrel",
  "description": "Provides a command to create a TypeScript or JavaScript barrel file in a folder and to automatically manage the contents of the barrel",
  "version": "1.0.2",
  "publisher": "mikehanson",
  "repository": "https://github.com/testpossessed/auto-barrel",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autoBarrel.createBarrel",
    "onCommand:autoBarrel.start",
    "onCommand:autoBarrel.stop"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Auto Barrel",
      "properties": {
        "autoBarrel.defaultLanguageExtension": {
          "type": "string",
          "default": "ts",
          "description": "The default extension to use for barrel file when it cannot be determined from the contents of the folder",
          "enum": ["ts", "js"],
          "enumDescriptions": ["Create a TypeScript barrel", "Create a JavaScript barrel"]
        },
        "autoBarrel.alwaysUseDefaultLanguageExtension": {
          "type": "boolean",
          "default": false,
          "description": "Indicates whether to use the default language extension, ignoring the contents of the folder"
        },
        "autoBarrel.watchGlob": {
          "type": "string",
          "default": "**/src/**/*!(.spec).[tj]s",
          "description": "Glob pattern for files to be watched when auto barrel is started"
        }
      }
    },
    "commands": [{
        "command": "autoBarrel.createBarrel",
        "title": "Create Barrel"
      },
      {
        "command": "autoBarrel.start",
        "title": "Auto Barrel - Start"
      },
      {
        "command": "autoBarrel.stop",
        "title": "Auto Barrel - Stop"
      }
    ],
    "menus": {
      "commandPalette": [{
          "command": "autoBarrel.start"
        },
        {
          "command": "autoBarrel.stop"
        }
      ],
      "explorer/context": [{
        "command": "autoBarrel.createBarrel",
        "when": "explorerViewletFocus && explorerResourceIsFolder"
      }]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  }
}